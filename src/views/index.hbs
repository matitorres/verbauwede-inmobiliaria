<div class="flex-fill mt-3">

    <h4 class="my-2 text-secondary d-flex d-md-none">
        <span class="bg-gradient-custom-secondary px-1 mr-2 rounded-right">&nbsp;</span>
        <span class="font-weight-light">Propiedades&nbsp;</span>
        destacadas
    </h4>

    <hr class="mt-1 d-flex d-md-none mx-4">

    <div class="d-flex justify-content-between" id="featured-properties-section">
        <div class="index-title-left d-none d-md-flex align-items-start bg-gradient-custom-secondary shadow my-2 mr-1">
            <img src="/img/featured-properties-title.svg" width="30" class="mx-4 my-5" alt="">
        </div>
        {{!-- <div class="bg-gradient-custom-secondary-reverse d-flex ml-auto pr-1 mb-2 h-100 shadow rounded-bottom">
                <span>&nbsp;</span>
            </div> --}}
        <div class="index-properties-left d-flex flex-wrap justify-content-around">
            {{#each featuredProperties}}
            <a href="/property/{{_id}}"
                class="d-flex flex-column my-2 featured-custom text-decoration-none rounded-lg shadow overflow-hidden">
                <div class="overflow-hidden position-relative w-100 h-100">
                    <img src="{{primaryPhotoPath}}" class="position-absolute item-img-center w-100"
                        alt="{{address}} alquiler venta propiedades inmobiliaria san luis argentina verbauwede">
                    <div class="d-flex flex-wrap w-100 h-100">
                        <div class="d-none d-lg-flex flex-column justify-content-between featured-info position-relative px-2 py-4">
                            <div class="d-flex flex-column">
                                <div class="featured-border-bottom text-truncate">
                                    <h4
                                        class="text-white text-center text-uppercase font-weight-bolder text-truncate mx-2">
                                        {{type}}</h4>
                                </div>
                                <div class="text-truncate">
                                    <h5 class="text-white mb-0 mt-1 text-center text-truncate mx-2">{{city}}</h5>
                                    <h6 class="text-white font-weight-light text-center text-truncate mx-2">{{address}}
                                    </h6>
                                </div>
                            </div>
                            <div class="d-flex flex-column">
                                <div class="text-truncate">
                                    {{#if totalArea}}
                                    <h6 class="text-white mb-0 mt-1 text-center">
                                        <span class="font-weight-light">Superficie</span>
                                        {{totalArea}} {{#if hectare}}Ha{{else}}m<sup>2</sup>{{/if}}
                                    </h6>
                                    {{/if}}
                                    <div class="d-flex flex-wrap justify-content-around text-white font-weight-light text-center my-1 px-5">
                                        {{#if bathrooms}}
                                        <div>
                                            <i class="fas fa-bath"></i> {{bathrooms}}
                                        </div>
                                        {{/if}}
                                        {{#if bedrooms}}
                                        <div>
                                            <i class="fas fa-bed"></i> {{bedrooms}}
                                        </div>
                                        {{/if}}
                                        {{#if capacity}}
                                        <div>
                                            <i class="fas fa-users"></i> {{capacity}}
                                        </div>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="featured-border-top text-white text-truncate pt-1">
                                    {{#if hidePrice}}
                                    <h4 class="text-center mb-0 text-truncate">
                                        <span class="font-weight-light">Consultar precio</span>
                                    </h4>
                                    {{else}}
                                    <div class="">
                                        <h3 class="text-center mb-0 text-truncate d-flex flex-wrap justify-content-center align-items-center">
                                            {{#if isMinPrice}}
                                            <span class="h5 font-weight-light mb-0">A partir de&nbsp;</span>
                                            {{/if}}
                                            <span>
                                                <span class="font-weight-light">
                                                    {{#if dollar}}U$S{{else}}${{/if}}
                                                </span>
                                                {{formatNumber price}}
                                            </span>
                                        </h3>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="position-relative bg-gradient-custom-primary ml-auto mb-auto mt-2 mr-2 pb-1">
                            <small class="text-white text-uppercase mx-3">{{operation}}</small>
                        </div>
                        <div class="d-flex d-lg-none flex-column position-relative featured-info-sm mt-auto px-3 py-3">
                            <div class="d-flex flex-column">
                                <div class="featured-border-bottom text-truncate">
                                    <h5 class="text-white text-center text-uppercase font-weight-bolder mb-0">{{type}}</h5>
                                    <h6 class="text-white text-center font-weight-light mb-2">
                                        {{city}}, {{province}}
                                    </h6>
                                </div>
                                <div class="text-white text-truncate d-flex justify-content-center my-2">
                                    {{#if totalArea}}
                                    <h6 class="text-white text-center mb-0 mx-2">
                                        <span class="font-weight-light">Superficie</span>
                                        {{totalArea}} {{#if hectare}}Ha{{else}}m<sup>2</sup>{{/if}}
                                    </h6>
                                    {{/if}}
                                    {{#if bathrooms}}
                                    <div class="mx-2">
                                        <i class="fas fa-bath"></i> {{bathrooms}}
                                    </div>
                                    {{/if}}
                                    {{#if bedrooms}}
                                    <div class="mx-2">
                                        <i class="fas fa-bed"></i> {{bedrooms}}
                                    </div>
                                    {{/if}}
                                    {{#if capacity}}
                                    <div class="mx-2">
                                        <i class="fas fa-users"></i> {{capacity}}
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="featured-border-top text-white text-truncate pt-1">
                                    {{#if hidePrice}}
                                    <h4 class="text-center mb-0 text-truncate">
                                        <span class="font-weight-light">Consultar precio</span>
                                    </h4>
                                    {{else}}
                                    <h3 class="text-center mb-0 text-truncate d-flex flex-wrap justify-content-center align-items-center">
                                        {{#if isMinPrice}}
                                        <span class="h5 font-weight-light mb-0">A partir de&nbsp;</span>
                                        {{/if}}
                                        <span>
                                            <span class="font-weight-light">
                                                {{#if dollar}}U$S{{else}}${{/if}}
                                            </span>
                                            {{formatNumber price}}
                                        </span>
                                    </h3>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>

