{{#if properties}}
<div class="container">
    <h3 class="mt-3 text-secondary mb-0">
        <span class="font-weight-light">Lista de </span>
        propiedades
    </h3>
    <hr class="mt-2">
    <div class="list-group mb-3 mx-2">
        {{#each properties}}
        <a href="/admin/properties/update/{{_id}}"
            class="list-group-item list-group-item-action border-0 rounded-0 p-0 mb-3 shadow-sm {{#if outstanding}}bg-gradient-custom-outstanding{{/if}}">
            <div class="row w-100 m-0">
                <div class="d-none d-sm-flex col-sm-3 col-lg-2 px-0 mb-0 overflow-hidden position-relative bg-dark">
                    <img src="{{primaryPhotoPreviewPath}}" class="position-absolute item-img-center"
                        alt="Foto de {{address}}">
                </div>
                <div class="d-flex d-sm-none col-12 p-0 mb-3 overflow-hidden">
                    <img src="{{primaryPhotoPreviewPath}}" class="img-fluid w-100" alt="Foto de {{address}}">
                </div>
                <div class="col-sm-7 col-lg-8 mb-2 mb-sm-0 py-0 py-sm-4">
                    <div class="row h-100 w-100 m-0 d-flex align-content-center">
                        <div class="col-sm-12 pl-0">
                            <h5 class="mb-1 text-truncate">
                                {{address}}
                                <span class="font-weight-light"> - {{city}}, {{province}}</span>
                            </h5>
                        </div>
                        <div class="col-sm-12 pl-0">
                            <h6 class="mb-1">
                                <span class="font-weight-light">// {{type}} - </span>
                                {{operation}}
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2 d-flex align-items-center justify-content-around mb-3 mb-sm-0">
                    <form action="/admin/properties/updatePhotos/{{_id}}" method="GET">
                        <button class="btn btn-link text-secondary" type="submit" name="submit">
                            <i class="fas fa-images shadow"></i>
                        </button>
                    </form>
                    <form action="/admin/properties/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-link text-secondary" type="submit" name="submit">
                            <i class="fas fa-trash shadow"></i>
                        </button>
                    </form>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
    {{>pagination}}
    {{else}}
    <h1 class="display-4 text-secondary text-center mt-5 pt-5"><i class="far fa-surprise"></i> Nada para mostrar.</h1>
    {{/if}}
</div>