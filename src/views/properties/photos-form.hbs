<div class="row mt-3">
    <div class="col-lg-8 col-xl-6 mx-auto mb-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4>
                    {{property.address}}
                    <span class="font-weight-light">, {{property.city}}</span>
                    <span class="font-weight-light">, {{property.province}}</span>
                </h4>
                <hr>
                <div>
                    <form action="/admin/properties/updatePhotos/{{property._id}}?_method=PUT" method="POST"
                        enctype="multipart/form-data">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="id" value="{{property._id}}">
                        <input type="hidden" name="type" value="{{property.type}}">
                        <div class="form-row w-100 px-3">
                            <h5><span class="font-weight-light">Foto </span>principal</h5>
                            <div class="form-group col-sm-12">
                                <img src="{{property.primaryPhotoPath}}" alt="Foto principal de {{property.address}}"
                                    class="w-100 rounded img-fluid mx-auto">
                            </div>
                            <div class="form-group col-sm-12 py-sm-0">
                                <label for="inputPropertyPhoto">Reemplazar por</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="propertyPhoto"
                                        id="inputPropertyPhoto" accept="image/*">
                                    <label class="custom-file-label text-truncate" for="inputPropertyPhoto">
                                        Seleccionar foto principal
                                    </label>
                                </div>
                            </div>
                            <hr class="col-12">
                            <h5 class="w-100">
                                <span class="font-weight-light">Fotos </span>
                                secundarias
                            </h5>
                            <div id="carouselSecondaryPhotos" class="carousel slide mb-2 mx-auto" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    {{#each property.secondaryPhotosPaths}}
                                    <li data-target="#carouselSecondaryPhotos" data-slide-to="{{@index}}"
                                        class="{{isActive @index}}"></li>
                                    {{/each}}
                                </ol>
                                <div class="carousel-inner">
                                    {{#each property.secondaryPhotosPaths}}
                                    <div class="carousel-item {{isActive @index}}">
                                        <img src="{{this}}" class="d-block w-100 rounded" alt="{{this}}">
                                    </div>
                                    {{/each}}
                                </div>
                                <a class="carousel-control-prev" href="#carouselSecondaryPhotos" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselSecondaryPhotos" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <div class="form-group col-sm-12 py-sm-0">
                                <label for="inputPropertyPhotos">Reemplazar todas por</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="propertyPhotos"
                                        id="inputPropertyPhotos" accept="image/*" multiple>
                                    <label class="custom-file-label text-truncate" for="inputPropertyPhotos"
                                        id="labelInputPropertyPhotos">Seleccionar fotos secundarias</label>
                                </div>
                            </div>
                            <hr class="col-12">
                        </div>
                        <div class="form-row w-100 justify-content-end">

                            <div class="form-group col-md-3 py-sm-0">
                                <a href="/admin/properties/update/{{property._id}}" class="btn btn-light w-100">
                                    Volver
                                </a>
                            </div>

                            <div class="form-group col-md-6 py-sm-0">
                                <button class="btn btn-primary w-100" type="submit" name="submit" id="property-add-submit">
                                    Guardar cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>