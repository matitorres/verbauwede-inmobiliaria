<div class="row mt-3">
    <div class="col-md-8 col-lg-5 mx-auto">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="mt-3"><span class="font-weight-light">Agregar </span>nuevo usuario</h4>
                <hr>
                <form action="/admin/signup" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="Email" value="{{email}}"
                            required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" class="form-control"
                            placeholder="Confirm password" required>
                    </div>
                    <hr>
                    <div class="form-row w-100 justify-content-end">
                        <div class="col-sm-4">
                            <a href="/admin" class="btn btn-light w-100">
                                Cancelar
                            </a>
                        </div>
                        <div class="col-sm-6 mt-2 mt-sm-0">
                            <button class="btn btn-primary w-100">Agregar usuario</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>